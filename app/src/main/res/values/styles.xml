<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Dialog.FullScreen"
        parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">
            false
        </item>
        <item name="android:windowBackground">
            @color/white
        </item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/enter_slide_up
        </item>
        <item name="android:windowExitAnimation">
            @anim/exit_slide_down
        </item>
    </style>
    <style name="ListItem">
        <item name="android:shape">rectangle</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:strokeColor">@color/purple_200</item>
        <item name="android:strokeWidth">1</item>
    </style>
</resources>