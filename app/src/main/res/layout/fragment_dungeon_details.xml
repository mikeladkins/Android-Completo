<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dungeon_details_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dungeon_de_other_side"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dungeon_details_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/placeholder_text"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/dungeon_details_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dungeon_details_key_level"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/placeholder_text"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/dungeon_details_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dungeon_details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_text"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dungeon_details_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>